rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Coleccion de pagos
    match /payments/{document} {
      allow read, write: if request.auth != null ||
        validateApiKey(request.headers.get('Authorization'));
    }

    // Coleccion de logs de pagos
    match /payment_logs/{document} {
      allow read, write: if request.auth != null ||
        validateApiKey(request.headers.get('Authorization'));
    }

    // Coleccion de testimonios
    match /testimonials/{document} {
      // Lectura publica para mostrar testimonios en el sitio
      allow read: if true;
      // Escritura solo para administradores autenticados
      allow write: if request.auth != null &&
        request.auth.token.admin == true;
    }

    // Coleccion de aplicaciones de trabajo
    match /applications/{document} {
      // Lectura y escritura solo para administradores autenticados
      allow read, write: if request.auth != null &&
        request.auth.token.admin == true;
    }

    // Coleccion de configuracion de webhooks
    match /webhook_config/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.token.admin == true;
    }

    function validateApiKey(authHeader) {
      return authHeader != null &&
        authHeader.matches('Bearer .*') &&
        authHeader.split('Bearer ')[1] == resource.data.api_key;
    }

    // Reglas para otras colecciones (mantener privadas)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
