rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Colección de pagos
    match /payments/{document} {
      // Permitir lectura y escritura solo a usuarios autenticados o con API key válida
      allow read, write: if request.auth != null || 
        validateApiKey(request.headers.get('Authorization'));
    }
    
    // Colección de logs de pagos
    match /payment_logs/{document} {
      // Permitir lectura y escritura solo a usuarios autenticados o con API key válida
      allow read, write: if request.auth != null || 
        validateApiKey(request.headers.get('Authorization'));
    }
    
    // Colección de testimonios - Permitir lectura y escritura sin autenticación
    match /testimonials/{document} {
      allow read, write: if true;
    }
    
    // Colección de aplicaciones de trabajo - Permitir escritura sin autenticación
    match /applications/{document} {
      allow read: if request.auth != null;
      allow write: if true;
    }
    
    // Colección de configuración de webhooks
    match /webhook_config/{document} {
      // Solo lectura para usuarios autenticados
      allow read: if request.auth != null;
      // Solo escritura para administradores
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Función para validar API key
    function validateApiKey(authHeader) {
      return authHeader != null && 
        authHeader.matches('Bearer .*') &&
        authHeader.split('Bearer ')[1] == resource.data.api_key;
    }
    
    // Reglas para otras colecciones (mantener privadas)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
} 